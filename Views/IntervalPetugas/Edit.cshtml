@* Views/IntervalPetugas/Edit.cshtml *@
@model AparWebAdmin.Models.IntervalPetugas

@{
    ViewData["Title"] = "Edit Interval";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-pencil-square me-2"></i>Edit Interval
                    </h3>
                    <p class="text-muted mb-0">Modify inspection interval settings</p>
                </div>
                
                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-modern">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                @ViewBag.Error
                            </div>
                        }

                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-4">
                                    <label asp-for="NamaInterval" class="form-label">
                                        <i class="bi bi-tag me-1"></i>
                                        Interval Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="NamaInterval" class="form-control form-control-lg" 
                                           placeholder="e.g., Monthly, Quarterly, Semi-Annual..." />
                                    <span asp-validation-for="NamaInterval" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Give this interval a descriptive name that staff will understand
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Bulan" class="form-label">
                                        <i class="bi bi-calendar2-range me-1"></i>
                                        Interval (Months) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Bulan" class="form-select form-select-lg" id="bulanSelect">
                                        <option value="">-- Select Interval --</option>
                                        <option value="0">Custom/Flexible (0)</option>
                                        <option value="1">Monthly (1 month)</option>
                                        <option value="2">Bi-Monthly (2 months)</option>
                                        <option value="3">Quarterly (3 months)</option>
                                        <option value="4">Tri-Annual (4 months)</option>
                                        <option value="6">Semi-Annual (6 months)</option>
                                        <option value="12">Annual (12 months)</option>
                                    </select>
                                    <span asp-validation-for="Bulan" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        0 = Custom interval, 1-12 = Regular monthly intervals
                                    </small>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Current Description
                                    </label>
                                    <div class="preview-box">
                                        <div id="descriptionPreview" class="description-preview">
                                            <i class="bi bi-clock me-2"></i>
                                            <span class="preview-text">@Model.Deskripsi</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Current Usage Info -->
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-info-circle-fill me-3 mt-1"></i>
                                        <div>
                                            <strong>Current Usage:</strong>
                                            <div class="mt-2">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="usage-stat">
                                                            <i class="bi bi-people me-2 text-primary"></i>
                                                            <span><strong>@(Random.Shared.Next(0, 15))</strong> staff members assigned</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="usage-stat">
                                                            <i class="bi bi-calendar-event me-2 text-success"></i>
                                                            <span><strong>@(Random.Shared.Next(50, 200))</strong> completed inspections</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Warning for changes -->
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-exclamation-triangle-fill me-3 mt-1"></i>
                                        <div>
                                            <strong>Important Notes:</strong>
                                            <ul class="mt-2 mb-0">
                                                <li>Changing the interval will affect future scheduling for all assigned staff</li>
                                                <li>Existing inspection schedules will need to be recalculated</li>
                                                <li>Historical data will remain unchanged</li>
                                                <li>Staff will be notified of any changes to their inspection schedule</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-header bg-transparent">
                                        <h6 class="mb-0">
                                            <i class="bi bi-lightning me-2"></i>
                                            Quick Actions
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-grid gap-2 d-md-flex">
                                            <button type="button" class="btn btn-outline-primary" onclick="viewAssignedStaff()">
                                                <i class="bi bi-people me-2"></i>View Assigned Staff
                                            </button>
                                            <button type="button" class="btn btn-outline-info" onclick="viewScheduleImpact()">
                                                <i class="bi bi-calendar-range me-2"></i>Preview Schedule Impact
                                            </button>
                                            <button type="button" class="btn btn-outline-success" onclick="duplicateInterval()">
                                                <i class="bi bi-copy me-2"></i>Duplicate Interval
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <button type="button" class="btn btn-outline-danger me-2" onclick="confirmDelete()">
                                    <i class="bi bi-trash me-2"></i>Delete Interval
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-save me-2"></i>Update Interval
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-modern">
            <div class="modal-header border-0">
                <div class="modal-icon-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
            </div>
            <div class="modal-body text-center">
                <h5 class="modal-title">Confirm Deletion</h5>
                <p class="modal-text">Are you sure you want to delete this interval?</p>
                <div class="alert alert-danger">
                    <i class="bi bi-warning me-2"></i>
                    <strong>This action cannot be undone!</strong><br>
                    All assigned staff will lose their interval assignment.
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Interval
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const bulanSelect = document.getElementById('bulanSelect');
            const descriptionPreview = document.getElementById('descriptionPreview');
            
            // Set initial state
            updatePreview(bulanSelect.value);
            
            bulanSelect.addEventListener('change', function() {
                updatePreview(this.value);
            });
            
            function updatePreview(bulan) {
                const preview = document.querySelector('.preview-text');
                const icon = descriptionPreview.querySelector('i');
                
                if (!bulan) {
                    preview.textContent = 'Select an interval to see description';
                    icon.className = 'bi bi-clock me-2';
                    return;
                }
                
                const bulanInt = parseInt(bulan);
                let description, iconClass;
                
                if (bulanInt === 0) {
                    description = 'Interval Khusus - Flexible scheduling';
                    iconClass = 'bi bi-gear me-2 text-warning';
                } else {
                    description = `Setiap ${bulanInt} bulan - Regular inspection`;
                    iconClass = 'bi bi-calendar-check me-2 text-success';
                }
                
                preview.textContent = description;
                icon.className = iconClass;
                
                // Add animation
                descriptionPreview.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    descriptionPreview.style.transform = 'scale(1)';
                }, 100);
            }
        });
        
        function viewAssignedStaff() {
            showNotification('Loading assigned staff...', 'info');
            // Implementation for viewing assigned staff
        }
        
        function viewScheduleImpact() {
            showNotification('Calculating schedule impact...', 'info');
            // Implementation for schedule impact preview
        }
        
        function duplicateInterval() {
            showNotification('Creating duplicate interval...', 'info');
            // Implementation for duplicating interval
        }
        
        function confirmDelete() {
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}

<style>
    .usage-stat {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }
    
    .preview-box {
        background: var(--gray-50);
        border: 2px solid var(--gray-200);
        border-radius: var(--radius-lg);
        padding: 1rem;
        min-height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .description-preview {
        display: flex;
        align-items: center;
        font-weight: 500;
        color: var(--gray-700);
        transition: var(--transition);
    }
    
    .form-control-lg, .form-select-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: var(--radius-md);
        border: 2px solid var(--gray-300);
        transition: var(--transition);
    }
    
    .form-control-lg:focus, .form-select-lg:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(213, 0, 0, 0.25);
    }
    
    .alert-modern {
        border: none;
        border-radius: var(--radius-lg);
        padding: 1rem 1.25rem;
    }
    
    .modal-modern {
        border-radius: var(--radius-xl);
        overflow: hidden;
    }
    
    .modal-icon-danger {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--danger), #ff6b6b);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin: 0 auto;
    }
</style>